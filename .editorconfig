# EditorConfig helps maintain consistent coding styles across different editors
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.go]
indent_style = tab
indent_size = 4

[*.{py,py3}]
indent_size = 4

[*.sql]
indent_size = 4

[*.md]
trim_trailing_whitespace = false
indent_size = 2

[Makefile]
indent_style = tab
indent_size = 4

[*.{yml,yaml}]
indent_size = 2

[*.json]
indent_size = 2

[*.sh]
indent_size = 2

[docker-compose*.yml]
indent_size = 2