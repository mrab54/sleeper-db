# Sleeper Fantasy Football Database Environment Variables

# PostgreSQL - Analytics Database (Normalized)
POSTGRES_DB=sleeper_db
POSTGRES_USER=sleeper_user
POSTGRES_PASSWORD=changeme_secure_password_here

# PostgreSQL - Raw Database (API Responses)
POSTGRES_RAW_DB=sleeper_raw

# Hasura GraphQL Engine
HASURA_ADMIN_SECRET=changeme_admin_secret_here
HASURA_ENABLE_CONSOLE=true
HASURA_ENABLE_ALLOWLIST=false
HASURA_LOG_TYPES=startup,http-log,query-log
HASURA_LOG_LEVEL=info

# Sleeper API Configuration
SLEEPER_API_BASE_URL=https://api.sleeper.app/v1
PRIMARY_LEAGUE_ID=1199102384316362752

# Service Configuration
ENVIRONMENT=development
LOG_LEVEL=info

# Grafana Configuration (Optional)
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# Resource Limits (Optional - adjust based on your system)
# POSTGRES_MAX_CONNECTIONS=100
# HASURA_MAX_CONNECTIONS=50
# SYNC_SERVICE_MAX_WORKERS=10
