# Sleeper Fantasy Football Database Environment Variables

# PostgreSQL Database
POSTGRES_DB=sleeper_db
POSTGRES_USER=sleeper_user
POSTGRES_PASSWORD=changeme_secure_password_here

# Hasura GraphQL Engine
HASURA_ADMIN_SECRET=changeme_admin_secret_here
HASURA_ENABLE_CONSOLE=true
HASURA_ENABLE_ALLOWLIST=false
HASURA_LOG_LEVEL=info

# Sync Service Configuration
WEBHOOK_SECRET=changeme_webhook_secret_here
SLEEPER_API_BASE_URL=https://api.sleeper.app/v1

# Service Configuration
ENVIRONMENT=development
LOG_LEVEL=info

# Optional: Sync Service Advanced Settings
# SLEEPER_API_RATE_LIMIT=900
# SLEEPER_SYNC_FULL_SCHEDULE="0 3 * * *"
# SLEEPER_SYNC_INCREMENTAL_INTERVAL=5m
# SLEEPER_SYNC_LEAGUE_BATCH_SIZE=10
# SLEEPER_SYNC_TRANSACTION_LOOKBACK_WEEKS=4
