# Sleeper Fantasy Football Database Configuration
# Copy this file to .env and update with your values

# Environment (development, staging, production)
ENVIRONMENT=development

# Logging
LOG_LEVEL=info

# =============================================================================
# Database Configuration
# =============================================================================
POSTGRES_DB=sleeper_db
POSTGRES_USER=sleeper_user
POSTGRES_PASSWORD=changeme_strong_password_here
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DATABASE=0

# =============================================================================
# Hasura Configuration
# =============================================================================
HASURA_ADMIN_SECRET=changeme_admin_secret_here
HASURA_ENABLE_CONSOLE=true
HASURA_DEV_MODE=true
HASURA_ENDPOINT=http://localhost:8080

# =============================================================================
# Sleeper API Configuration
# =============================================================================
SLEEPER_API_BASE_URL=https://api.sleeper.app/v1
# Your primary league ID
PRIMARY_LEAGUE_ID=1199102384316362752
# Rate limit (requests per minute)
SLEEPER_RATE_LIMIT=500

# =============================================================================
# Sync Service Configuration
# =============================================================================
# Server
SERVER_PORT=8000
SERVER_HOST=0.0.0.0
SERVER_READ_TIMEOUT=30s
SERVER_WRITE_TIMEOUT=30s
SERVER_IDLE_TIMEOUT=120s

# =============================================================================
# Monitoring
# =============================================================================
# Grafana
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# Metrics
METRICS_ENABLED=true
METRICS_PATH=/metrics

# =============================================================================
# Feature Flags
# =============================================================================
# Enable/disable specific sync features
ENABLE_LIVE_SCORING_SYNC=true
ENABLE_TRANSACTION_SYNC=true
ENABLE_PLAYER_SYNC=true

# Sync intervals (in minutes)
LIVE_SCORING_INTERVAL=1
ROSTER_SYNC_INTERVAL=60
TRANSACTION_SYNC_INTERVAL=30
PLAYER_METADATA_INTERVAL=1440  # 24 hours

# =============================================================================
# Development Settings
# =============================================================================
# Enable debug endpoints
ENABLE_DEBUG_ENDPOINTS=false
# Enable pprof profiling endpoint
ENABLE_PPROF=false

# =============================================================================
# Backup Configuration
# =============================================================================
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=7
BACKUP_PATH=./backups

# =============================================================================
# Notification Settings (Future Enhancement)
# =============================================================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=
# SMTP_PASSWORD=
# NOTIFICATION_EMAIL=

# Discord webhook for notifications (optional)
# DISCORD_WEBHOOK_URL=

# =============================================================================
# Docker Settings
# =============================================================================
# Go runtime
GOMAXPROCS=4

# Container resource limits (for docker-compose)
POSTGRES_MAX_CONNECTIONS=100
REDIS_MAX_MEMORY=256mb